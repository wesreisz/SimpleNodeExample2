extends layout

block content
    h1= title
    p Welcome to our test

    // Wrapper
    #wrapper

        // USER INFO
        #userInfo
            h2 User Info
            p
                strong Name:
                |  <span id='userInfoName'></span>
                br
                strong Age:
                |  <span id='userInfoAge'></span>
                br
                strong Gender:
                |  <span id='userInfoGender'></span>
                br
                strong Location:
                |  <span id='userInfoLocation'></span>
        // /USER INFO

        // EDIT USER
        #saveUser
            h2 Edit User
            fieldset
                strong ID: 
                |<span id='inputUserId'></span>
                br
                strong UserName: 
                input#userInfoNameEdit(type='text')
                br
                strong Email: 
                input#inputUserEmailEdit(type='text')
                br
                strong Full Name: 
                input#inputUserFullnameEdit(type='text')
                br
                strong Age: 
                input#userInfoAgeEdit(type='text')
                br
                strong Location: 
                input#userInfoLocationEdit(type='text')
                br
                strong Gender: 
                input#userInfoGenderEdit(type='text')
                br
                button#btnSaveUser Edit User
        // /EDIT USER

        // USER LIST
        h2 User List
        #userList
            table
                thead
                    th UserName
                    th Email
                    th Manage?
                tbody
        // /USER LIST

        // ADD USER
        #addUser
            h2 Add User
            fieldset
                input#inputUserName(type='text', placeholder='Username')
                input#inputUserEmail(type='text', placeholder='Email')
                br
                input#inputUserFullname(type='text', placeholder='Full Name')
                input#inputUserAge(type='text', placeholder='Age')
                br
                input#inputUserLocation(type='text', placeholder='Location')
                input#inputUserGender(type='text', placeholder='gender')
                br
                button#btnAddUser Add User
        // /ADD USER

    // /WRAPPER
